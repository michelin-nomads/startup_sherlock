{
    "hosting": {
      "public": "client/dist",
      "ignore": [
        "firebase.json",
        "/.*",
        "/node_modules/"
      ],
      "rewrites": [
        {
          "source": "",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            },
            {
              "key": "Pragma",
              "value": "no-cache"
            },
            {
              "key": "Expires",
              "value": "0"
            }
          ]
        }
      ]
    },
    "functions": {
      "source": "functions",
      "runtime": "nodejs18"
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    }
  }
  